@page
@model CreateModel
@{
    ViewBag.Title = "Create Role";
    ViewBag.pTitle = "Create Role";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-bold">Create Role</h5>
        <small class="text-muted float-end">Role Management</small>
    </div>
    <div class="card-body">
        <form method="post" class="form-horizontal">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row mb-4 align-items-center">
                <label asp-for="Input.RoleName" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.RoleName" class="form-control" />
                    <span asp-validation-for="Input.RoleName" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4 align-items-center">
                <label asp-for="Input.RoleDescription" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="Input.RoleDescription" class="form-control" />
                    <span asp-validation-for="Input.RoleDescription" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="button" class="btn btn-primary" id="create-role-btn">Create</button>
                    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>
<!-- Confirmation Modal -->
<div id="createRoleModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon
                        src="https://cdn.lordicon.com/exymduqj.json"
                        trigger="loop"
                        delay="2000"
                        stroke="light"
                        state="hover-line"
                        style="width:100px;height:100px">
                    </lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you sure?</h4>
                        <p class="text-muted mx-4 mb-0">Are you sure you want to create this role?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-primary" id="confirm-create-role">Yes, Create It!</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            var form = $('form');
            
            $('#create-role-btn').on('click', function() {
                form.validate();
                if (form.valid()) {
                    var modal = new bootstrap.Modal(document.getElementById('createRoleModal'));
                    modal.show();
                }
            });
            
            $('#confirm-create-role').on('click', function() {
                form.submit();
            });
        });
    </script>
}
