@page
@model ResearchApps.Web.Areas.Admin.Pages.Users.SuspendModel
@{
    ViewBag.Title = "Suspend User";
    ViewBag.pTitle = "Suspend User";
}

<div class="card">
    <div class="card-header d-flex align-items-center justify-content-between">
        <h5 class="mb-0 fw-bold">Suspend User</h5>
        <small class="text-muted float-end">User Suspension</small>
    </div>
    <div class="card-body">
        @if (!string.IsNullOrEmpty(Model.StatusMessage))
        {
            <div class="alert alert-success">@Model.StatusMessage</div>
        }
        <form method="post">
            <div asp-validation-summary="All" class="text-danger mb-3"></div>
            <div class="row mb-4 align-items-center">
                <label asp-for="LockoutEnabled" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <div class="form-check mt-2">
                        <input asp-for="LockoutEnabled" class="form-check-input" type="checkbox" />
                    </div>
                    <span asp-validation-for="LockoutEnabled" class="text-danger"></span>
                </div>
            </div>
            <div class="row mb-4 align-items-center">
                <label asp-for="LockoutEnd" class="col-sm-2 col-form-label fw-bold"></label>
                <div class="col-sm-10">
                    <input asp-for="LockoutEnd" class="form-control" type="datetime-local" />
                    <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                </div>
            </div>
            <div class="row justify-content-end">
                <div class="col-sm-10">
                    <button type="button" class="btn btn-danger" id="suspend-user-btn">Suspend User</button>
                    <a asp-page="Index" class="btn btn-secondary ms-2">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- Confirmation Modal -->
<div id="suspendUserModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon
                        src="https://cdn.lordicon.com/gsqxdxog.json"
                        trigger="loop"
                        delay="2000"
                        colors="primary:#f7b84b,secondary:#f06548"
                        style="width:100px;height:100px">
                    </lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you sure?</h4>
                        <p class="text-muted mx-4 mb-0">Are you sure you want to suspend/update this user's account?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-danger" id="confirm-suspend-user">Yes, Update It!</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            var form = $('form');
            
            $('#suspend-user-btn').on('click', function() {
                var modal = new bootstrap.Modal(document.getElementById('suspendUserModal'));
                modal.show();
            });
            
            $('#confirm-suspend-user').on('click', function() {
                form.submit();
            });
        });
    </script>
}
