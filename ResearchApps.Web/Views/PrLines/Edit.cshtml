@model ResearchApps.Service.Vm.PrLineVm

@{
    ViewBag.Title = "Edit PR Line";
    Layout = "_Layout";
}

@section styles {
    <link href="/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/libs/select2-bootstrap-5-theme/select2-bootstrap-5-theme.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-body">
                <form asp-action="Edit" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <input type="hidden" asp-for="PrLineId" />
                    <input type="hidden" asp-for="PrRecId" />
                    <input type="hidden" asp-for="PrStatusId" />
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="ItemId" class="form-label"></label>
                                <select asp-for="ItemId" class="form-select select2" id="itemId">
                                    <option value="">Select Item</option>
                                </select>
                                <span asp-validation-for="ItemId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="RequestDate" class="form-label"></label>
                                <div class="input-group">
                                    <input asp-for="RequestDate" type="text" class="form-control flatpickr-input" id="requestDate" />
                                    <span class="input-group-text"><i class="ri-calendar-line"></i></span>
                                </div>
                                <span asp-validation-for="RequestDate" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Qty" class="form-label"></label>
                                <input asp-for="Qty" type="number" step="0.01" class="form-control" id="qty" />
                                <span asp-validation-for="Qty" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="UnitId" class="form-label"></label>
                                <select asp-for="UnitId" class="form-select select2" id="unitId">
                                    <option value="">Select Unit</option>
                                </select>
                                <span asp-validation-for="UnitId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-group">
                                <label asp-for="Price" class="form-label"></label>
                                <input asp-for="Price" type="number" step="1" class="form-control" id="price" />
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Amount" class="form-label"></label>
                                <input asp-for="Amount" type="number" step="1" class="form-control" id="amount" readonly />
                                <small class="text-muted">Amount is calculated automatically (Qty × Price)</small>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Notes" class="form-label"></label>
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Update</button>
                        <a asp-action="Details" asp-route-id="@Model.PrLineId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/select2/js/select2.min.js"></script>
    <script src="/assets/libs/flatpickr/flatpickr.min.js"></script>
    <script>
        const token = $('input[name="__RequestVerificationToken"]').val();
        
        $(document).ready(function() {
            // Initialize Select2 for Item
            $('#itemId').select2({
                theme: 'bootstrap5',
                placeholder: "Select Item",
                ajax: {
                    url: '/api/Items/cbo',
                    type: 'GET',
                    dataType: 'json',
                    delay: 500,
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: function (params) {
                        return {
                            term: params.term ? `%${params.term}%` : '',
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data.data.map(item => ({
                                id: item.itemId,
                                text: item.itemName
                            }))
                        };
                    },
                }
            });
            
            // Initialize Select2 for Unit
            $('#unitId').select2({
                theme: 'bootstrap5',
                placeholder: "Select Unit",
                ajax: {
                    url: '/api/Units/cbo',
                    type: 'GET',
                    dataType: 'json',
                    delay: 500,
                    headers: {
                        'RequestVerificationToken': token
                    },
                    data: function (params) {
                        return {
                            term: params.term ? `%${params.term}%` : '',
                        };
                    },
                    processResults: function (data) {
                        return {
                            results: data.data.map(item => ({
                                id: item.unitId,
                                text: item.unitName
                            }))
                        };
                    },
                }
            });
            
            // Initialize flatpickr for date
            @if (Model.RequestDate.HasValue)
            {
                <text>
                flatpickr("#requestDate", {
                    dateFormat: "d M Y",
                    defaultDate: "@Model.RequestDate.Value.ToString("yyyy-MM-dd")"
                });
                </text>
            }
            else
            {
                <text>
                flatpickr("#requestDate", {
                    dateFormat: "d M Y"
                });
                </text>
            }
            
            // Load current Item value
            const currentItemId = @Model.ItemId;
            const currentItemName = "@Model.ItemName";
            if (currentItemId > 0) {
                const option = new Option(currentItemName, currentItemId, true, true);
                $('#itemId').append(option).trigger('change');
            }
            
            // Load current Unit value
            const currentUnitId = @Model.UnitId;
            const currentUnitName = "@Model.UnitName";
            if (currentUnitId > 0) {
                const option = new Option(currentUnitName, currentUnitId, true, true);
                $('#unitId').append(option).trigger('change');
            }
            
            // Calculate amount when qty or price changes
            function calculateAmount() {
                const qty = parseFloat($('#qty').val()) || 0;
                const price = parseFloat($('#price').val()) || 0;
                const amount = Math.round(qty * price);
                $('#amount').val(amount);
            }
            
            $('#qty, #price').on('input change', calculateAmount);
            
            // Calculate initial amount
            calculateAmount();

            // Confirmation modal handler
            $('#update-prline-btn').on('click', function() {
                var modal = new bootstrap.Modal(document.getElementById('updatePrLineModal'));
                modal.show();
            });

            $('#confirm-update-prline').on('click', function() {
                $('form').submit();
            });
        });
    </script>
}

<!-- Confirmation Modal -->
<div id="updatePrLineModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon
                        src="https://cdn.lordicon.com/exymduqj.json"
                        trigger="loop"
                        delay="2000"
                        stroke="light"
                        state="hover-line"
                        style="width:100px;height:100px">
                    </lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you sure?</h4>
                        <p class="text-muted mx-4 mb-0">Are you sure you want to update this PR line?</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-primary" id="confirm-update-prline">Yes, Update It!</button>
                </div>
            </div>
        </div>
    </div>
</div>

