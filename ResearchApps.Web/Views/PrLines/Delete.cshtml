@model ResearchApps.Service.Vm.PrLineVm

@{
    ViewBag.Title = "Delete PR Line";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Delete PR Line</h4>
            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a asp-controller="Prs" asp-action="Index">PRs</a></li>
                    <li class="breadcrumb-item active">Delete PR Line</li>
                </ol>
            </div>
        </div>
    </div>
</div>

<div class="row">
    <div class="col-lg-12">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0 text-white">
                    <i class="ri-alert-line me-2"></i>Confirm Deletion
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <strong>Warning!</strong> Are you sure you want to delete this PR Line? This action cannot be undone.
                </div>
                
                <h5 class="mb-3">PR Line Details:</h5>
                
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.PrLineId)</strong></div>
                    <div class="col-9">@Html.DisplayFor(m => m.PrLineId)</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.PrId)</strong></div>
                    <div class="col-9">@Html.DisplayFor(m => m.PrId)</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ItemName)</strong></div>
                    <div class="col-9">@Html.DisplayFor(m => m.ItemName)</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.RequestDate)</strong></div>
                    <div class="col-9">@Html.DisplayFor(m => m.RequestDateStr)</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.Qty)</strong></div>
                    <div class="col-9">@Model.Qty.ToString("N2")</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.UnitName)</strong></div>
                    <div class="col-9">@Html.DisplayFor(m => m.UnitName)</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.Price)</strong></div>
                    <div class="col-9">@Model.Price.ToString("N0")</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.Amount)</strong></div>
                    <div class="col-9">@(Model.Amount?.ToString("N0") ?? "0")</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.Notes)</strong></div>
                    <div class="col-9">@Html.DisplayFor(m => m.Notes)</div>
                </div>
                
                <form asp-action="Delete" method="post" class="mt-4" id="delete-prline-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PrLineId" />
                    <input type="hidden" asp-for="PrId" />
                    
                    <button type="button" class="btn btn-danger" id="delete-prline-btn">
                        <i class="ri-delete-bin-fill me-1"></i> Confirm Delete
                    </button>
                    <a asp-action="Details" asp-route-id="@Model.PrLineId" class="btn btn-secondary">
                        <i class="ri-close-line me-1"></i> Cancel
                    </a>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div id="deletePrLineModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon
                        src="https://cdn.lordicon.com/gsqxdxog.json"
                        trigger="loop"
                        colors="primary:#f7b84b,secondary:#f06548"
                        style="width:100px;height:100px">
                    </lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you sure?</h4>
                        <p class="text-muted mx-4 mb-0">Are you sure you want to delete this PR line? This action cannot be undone.</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-danger" id="confirm-delete-prline">Yes, Delete It!</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            $('#delete-prline-btn').on('click', function() {
                var modal = new bootstrap.Modal(document.getElementById('deletePrLineModal'));
                modal.show();
            });

            $('#confirm-delete-prline').on('click', function() {
                $('#delete-prline-form').submit();
            });
        });
    </script>
}
