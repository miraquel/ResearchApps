@model ResearchApps.Service.Vm.PrVm

@{
    ViewBag.Title = "Create PR";
    ViewBag.pTitle = "Create Purchase Requisition";
    Layout = "_Layout";
}

@section styles {
    <link href="/assets/libs/select2/css/select2.min.css" rel="stylesheet" type="text/css" />
    <link href="/assets/libs/flatpickr/flatpickr.min.css" rel="stylesheet" type="text/css" />
}

<div class="row">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header">
                <h5 class="card-title mb-0">Create New PR</h5>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    @Html.AntiForgeryToken()
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PrDate" class="form-label"></label>
                                <input asp-for="PrDate" type="text" class="form-control flatpickr-input" id="prDate" />
                                <span asp-validation-for="PrDate" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="BudgetId" class="form-label"></label>
                                <select asp-for="BudgetId" class="form-select" id="budgetId">
                                    <option value="">Select Budget</option>
                                </select>
                                <span asp-validation-for="BudgetId" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="PrStatusId" class="form-label"></label>
                                <select asp-for="PrStatusId" class="form-select select2" id="prStatusId">
                                    <option value="">Select Status</option>
                                </select>
                                <span asp-validation-for="PrStatusId" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-group">
                                <label asp-for="Total" class="form-label"></label>
                                <input asp-for="Total" type="number" step="0.01" class="form-control" />
                                <span asp-validation-for="Total" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="row mb-3">
                        <div class="col-md-12">
                            <div class="form-group">
                                <label asp-for="Notes" class="form-label"></label>
                                <textarea asp-for="Notes" class="form-control" rows="3"></textarea>
                                <span asp-validation-for="Notes" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    
                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Create</button>
                        <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/select2/js/select2.min.js"></script>
    <script src="/assets/libs/flatpickr/flatpickr.min.js"></script>
    <script src="/assets/js/pages/form-pickers.init.js"></script>
    <script>
        $(document).ready(function() {
            // Initialize Select2
            $('.select2').select2({
                theme: 'bootstrap-5',
                width: '100%'
            });
            
            // Initialize flatpickr for date
            flatpickr("#prDate", {
                dateFormat: "Y-m-d",
                defaultDate: new Date()
            });
            
            // Load Status dropdown
            $.ajax({
                url: '/api/Statuses',
                method: 'GET',
                success: function(response) {
                    if (response.data && Array.isArray(response.data.items)) {
                        const statusSelect = $('#prStatusId');
                        response.data.items.forEach(function(status) {
                            statusSelect.append(new Option(status.statusName, status.statusId));
                        });
                    }
                },
                error: function(err) {
                    console.error('Failed to load statuses:', err);
                }
            });
            
            // Note: Budget dropdown would need a Budget API endpoint
            // For now, leaving it as a placeholder
        });
    </script>
}
