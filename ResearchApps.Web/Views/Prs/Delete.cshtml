@model ResearchApps.Service.Vm.PrVm

@{
    ViewBag.Title = "Delete PR";
    ViewBag.pTitle = "Delete Purchase Requisition";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border border-danger">
            <div class="card-header bg-danger bg-opacity-10">
                <h5 class="card-title mb-0 text-danger">Delete PR #@Model.PrId</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>Are you sure you want to delete this PR? This action cannot be undone.</p>
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrId)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.PrId)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrDate)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.PrDateStr)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.PrName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.BudgetName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.BudgetName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Total)</dt>
                    <dd class="col-sm-9">@(Model.Total?.ToString("N2") ?? "0.00")</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrStatusName)</dt>
                    <dd class="col-sm-9">@Html.Raw(Model.PrStatusName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Notes)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Notes)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedBy)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedBy)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedDate)</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("g")</dd>
                </dl>
                
                <form asp-action="Delete" method="post" id="delete-pr-form">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PrId" />
                    <input type="hidden" asp-for="RecId" />
                    <div class="d-flex gap-2">
                        <button type="button" class="btn btn-danger" id="delete-pr-btn">
                            <i class="ri-delete-bin-line me-1"></i> Confirm Delete
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.RecId" class="btn btn-secondary">
                            <i class="ri-close-line me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

<!-- Confirmation Modal -->
<div id="deletePrModal" class="modal fade zoomIn" tabindex="-1" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                <div class="mt-2 text-center">
                    <lord-icon
                        src="https://cdn.lordicon.com/gsqxdxog.json"
                        trigger="loop"
                        colors="primary:#f7b84b,secondary:#f06548"
                        style="width:100px;height:100px">
                    </lord-icon>
                    <div class="mt-4 pt-2 fs-15 mx-4 mx-sm-5">
                        <h4>Are you sure?</h4>
                        <p class="text-muted mx-4 mb-0">Are you sure you want to delete this purchase requisition? This action cannot be undone.</p>
                    </div>
                </div>
                <div class="d-flex gap-2 justify-content-center mt-4 mb-2">
                    <button type="button" class="btn w-sm btn-light" data-bs-dismiss="modal">Close</button>
                    <button type="button" class="btn w-sm btn-danger" id="confirm-delete-pr">Yes, Delete It!</button>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script>
        $(document).ready(function() {
            $('#delete-pr-btn').on('click', function() {
                var modal = new bootstrap.Modal(document.getElementById('deletePrModal'));
                modal.show();
            });

            $('#confirm-delete-pr').on('click', function() {
                $('#delete-pr-form').submit();
            });
        });
    </script>
}
