@model ResearchApps.Service.Vm.PrVm

@{
    ViewBag.Title = "Delete PR";
    ViewBag.pTitle = "Delete Purchase Requisition";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border border-danger">
            <div class="card-header bg-danger bg-opacity-10">
                <h5 class="card-title mb-0 text-danger">Delete PR #@Model.PrId</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-danger" role="alert">
                    <h4 class="alert-heading">Warning!</h4>
                    <p>Are you sure you want to delete this PR? This action cannot be undone.</p>
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrId)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.PrId)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrDate)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.PrDateStr)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.BudgetName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.BudgetName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Total)</dt>
                    <dd class="col-sm-9">@(Model.Total?.ToString("N2") ?? "0.00")</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.PrStatusName)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.PrStatusName)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Notes)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.Notes)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedBy)</dt>
                    <dd class="col-sm-9">@Html.DisplayFor(m => m.CreatedBy)</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedDate)</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("g")</dd>
                </dl>
                
                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="PrId" />
                    <input type="hidden" asp-for="RecId" />
                    <div class="d-flex gap-2">
                        <button type="submit" class="btn btn-danger">
                            <i class="ri-delete-bin-line me-1"></i> Confirm Delete
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.PrId" class="btn btn-secondary">
                            <i class="ri-close-line me-1"></i> Cancel
                        </a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
