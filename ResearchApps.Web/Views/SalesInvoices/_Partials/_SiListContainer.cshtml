@model ResearchApps.Service.Vm.Common.PagedListVm<ResearchApps.Service.Vm.SalesInvoiceHeaderVm>

<table class="table table-bordered table-hover align-middle mb-0" style="width: 100%;">
    <thead class="table-light">
    <tr>
        <th class="sortable-header" style="width: 140px; cursor: pointer;" 
            @@click="sort('SiId')" data-column="SiId">
            <div class="d-flex align-items-center justify-content-center">
                <span>SI ID</span>
                <template x-if="sortBy === 'SiId'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="sortable-header" style="width: 130px; cursor: pointer;"
            @@click="sort('SiDate')" data-column="SiDate">
            <div class="d-flex align-items-center justify-content-center">
                <span>Date</span>
                <template x-if="sortBy === 'SiDate'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="sortable-header" style="min-width: 250px; cursor: pointer;"
            @@click="sort('CustomerName')" data-column="CustomerName">
            <div class="d-flex align-items-center">
                <span>Customer</span>
                <template x-if="sortBy === 'CustomerName'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="sortable-header" style="width: 130px; cursor: pointer;"
            @@click="sort('PoNo')" data-column="PoNo">
            <div class="d-flex align-items-center justify-content-center">
                <span>PO No</span>
                <template x-if="sortBy === 'PoNo'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="sortable-header" style="width: 130px; cursor: pointer;"
            @@click="sort('TaxNo')" data-column="TaxNo">
            <div class="d-flex align-items-center justify-content-center">
                <span>Tax No</span>
                <template x-if="sortBy === 'TaxNo'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="sortable-header" style="width: 160px; cursor: pointer;"
            @@click="sort('Amount')" data-column="Amount">
            <div class="d-flex align-items-center justify-content-end">
                <span>Amount</span>
                <template x-if="sortBy === 'Amount'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="sortable-header" style="width: 120px; cursor: pointer;"
            @@click="sort('SiStatusId')" data-column="SiStatusId">
            <div class="d-flex align-items-center justify-content-center">
                <span>Status</span>
                <template x-if="sortBy === 'SiStatusId'">
                    <i :class="sortAsc ? 'ri-arrow-up-s-line' : 'ri-arrow-down-s-line'" class="ms-1"></i>
                </template>
            </div>
        </th>
        <th class="text-center" style="width: 80px;">Actions</th>
    </tr>
    </thead>
    <tbody id="si-table-body">
    @await Html.PartialAsync("_Partials/_SiListPartial", Model)
    </tbody>
    <tfoot class="table-light">
    <tr>
        <td>
            <input type="text" class="form-control form-control-sm" placeholder="Search ID..."
                   x-model="filters.SiId" @@input.debounce.500ms="fetchList()">
        </td>
        <td>
            <div id="si-date-range" class="flatpickr input-group">
                <input type="text" class="form-control form-control-sm" placeholder="Select date range..." data-input>
                <button class="btn btn-sm btn-outline-secondary" type="button" title="Clear" data-clear>
                    <i class="ri-close-line"></i>
                </button>
            </div>
        </td>
        <td>
            <input type="text" class="form-control form-control-sm" placeholder="Search customer name..."
                   x-model="filters.CustomerName" @@input.debounce.500ms="fetchList()">
        </td>
        <td>
            <input type="text" class="form-control form-control-sm" placeholder="Search PO..."
                   x-model="filters.PoNo" @@input.debounce.500ms="fetchList()">
        </td>
        <td>
            <input type="text" class="form-control form-control-sm" placeholder="Search Tax No..."
                   x-model="filters.TaxNo" @@input.debounce.500ms="fetchList()">
        </td>
        <td>
            <div class="input-group input-group-sm">
                <select class="form-control form-control-sm" style="flex: 0 0 30px;" x-model="filters.AmountOperator" @@change="fetchList()">
                    <option value="=">=</option>
                    <option value=">">></option>
                    <option value=">=">>=</option>
                    <option value="<"><</option>
                    <option value="<="><=</option>
                </select>
                <input type="text" class="form-control text-end" placeholder="Amount..." inputmode="numeric"
                       :value="formatNumber(filters.Amount)"
                       @@input="filters.Amount = parseNumber($event.target.value)"
                       @@blur="$event.target.value = formatNumber(filters.Amount)"
                       @@keypress="if(!/[0-9]/.test($event.key) && $event.key !== 'Backspace' && $event.key !== 'Delete') $event.preventDefault()"
                       @@input.debounce.500ms="fetchList()">
            </div>
        </td>
        <td>
            <select class="form-select form-select-sm" x-model="filters.SiStatusId" @@change="fetchList()">
                <option value="">All Statuses</option>
                <option value="0">Draft</option>
                <option value="1">Active</option>
                <option value="2">Processing</option>
                <option value="3">Cancelled</option>
            </select>
        </td>
        <td class="text-center">
            <button type="button" class="btn btn-sm btn-outline-secondary w-100" @@click="clearFilters()" title="Clear All Filters">
                <i class="ri-filter-off-line"></i>
            </button>
        </td>
    </tr>
    </tfoot>
</table>

<div class="mt-3">
    @await Html.PartialAsync("_Partials/_SiPaginationPartial", Model)
</div>
