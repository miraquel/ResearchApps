@model ResearchApps.Service.Vm.SupplierVm

@{
    ViewBag.Title = "Delete Supplier";
    ViewBag.pTitle = "Delete Supplier";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="ri-alert-line"></i> Confirm Delete
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="ri-error-warning-line me-2"></i>
                    Are you sure you want to delete this supplier? This action cannot be undone.
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">Supplier Name</dt>
                    <dd class="col-sm-9">@Model.SupplierName</dd>
                    
                    <dt class="col-sm-3">Address</dt>
                    <dd class="col-sm-9">@(Model.Address ?? "-")</dd>
                    
                    <dt class="col-sm-3">City</dt>
                    <dd class="col-sm-9">@(Model.City ?? "-")</dd>
                    
                    <dt class="col-sm-3">Email</dt>
                    <dd class="col-sm-9">@(Model.Email ?? "-")</dd>
                    
                    <dt class="col-sm-3">Telephone</dt>
                    <dd class="col-sm-9">@(Model.Telp ?? "-")</dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Html.Raw(Model.StatusName)</dd>
                </dl>
                
                <form asp-action="DeleteConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="SupplierId" />
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="ri-delete-bin-line"></i> Delete
                        </button>
                        <a href="/Suppliers/Details/@Model.SupplierId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
