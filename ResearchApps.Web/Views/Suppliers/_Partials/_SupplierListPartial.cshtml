@model ResearchApps.Service.Vm.Common.PagedListVm<ResearchApps.Service.Vm.SupplierVm>

@if (Model.Items.Any())
{
    foreach (var item in Model.Items)
    {
        <tr>
            <td><strong>@item.SupplierName</strong></td>
            <td>@(item.Address ?? "-")</td>
            <td class="text-center">@(item.City ?? "-")</td>
            <td class="text-center">@(item.Telp ?? "-")</td>
            <td>@(item.Email ?? "-")</td>
            <td class="text-center">@(item.IsPpn ? "Yes" : "No")</td>
            <td class="text-center">@Html.Raw(item.StatusName)</td>
            <td class="text-center">
                @* Actions dropdown *@
                <div class="dropdown d-inline-block">
                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" 
                            data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="ri-more-fill align-middle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a href="/Suppliers/Details/@item.SupplierId" class="dropdown-item">
                                <i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
                            </a>
                        </li>
                        <li>
                            <a href="/Suppliers/Edit/@item.SupplierId" class="dropdown-item">
                                <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
                            </a>
                        </li>
                        <li>
                            <a href="/Suppliers/Delete/@item.SupplierId" class="dropdown-item">
                                <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                            </a>
                        </li>
                    </ul>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted py-4">
            <i class="ri-inbox-line fs-2"></i>
            <p class="mb-0 mt-2">No suppliers found</p>
        </td>
    </tr>
}
