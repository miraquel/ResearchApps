@model ErrorViewModel
@{
    ViewData["Title"] = "Error";
}

<div class="container">
    <div class="row justify-content-center mt-5">
        <div class="col-lg-6">
            <div class="card">
                <div class="card-body text-center">
                    @if (Model.StatusCode != 0)
                    {
                        <h1 class="display-1 text-danger">@Model.StatusCode</h1>
                    }
                    else
                    {
                        <i class="ri-error-warning-line display-1 text-danger"></i>
                    }
                    
                    <h3 class="mt-4">@(ViewData["ErrorMessage"] ?? "Oops! Something went wrong")</h3>
                    
                    <p class="text-muted mt-3">
                        @if (Model.StatusCode == 404)
                        {
                            <text>The page you are looking for could not be found.</text>
                        }
                        else if (Model.StatusCode == 403)
                        {
                            <text>You don't have permission to access this resource.</text>
                        }
                        else if (Model.StatusCode == 401)
                        {
                            <text>You need to be authenticated to access this resource.</text>
                        }
                        else
                        {
                            <text>An error occurred while processing your request.</text>
                        }
                    </p>

                    @if (Model.ShowRequestId)
                    {
                        <p class="text-muted small mt-3">
                            <strong>Request ID:</strong> <code>@Model.RequestId</code>
                        </p>
                    }

                    <div class="mt-4">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-primary">
                            <i class="ri-home-line me-1"></i> Go to Home
                        </a>
                        <button onclick="history.back()" class="btn btn-secondary">
                            <i class="ri-arrow-left-line me-1"></i> Go Back
                        </button>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
