@using ResearchApps.Common.Constants
<!-- ========== App Menu ========== -->
<div class="app-menu navbar-menu">
    <!-- LOGO -->
    <div class="navbar-brand-box">
        <!-- Dark Logo-->
        <a href="@Url.Action("Index", "Home")" class="logo logo-dark">
            <span class="logo-sm">
                <img src="~/assets/images/logo-sm.png" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="~/assets/images/logo-dark.png" alt="" height="17">
            </span>
        </a>
        <!-- Light Logo-->
        <a href="@Url.Action("Index", "Home")" class="logo logo-light">
            <span class="logo-sm">
                <img src="~/assets/images/logo-sm.png" alt="" height="22">
            </span>
            <span class="logo-lg">
                <img src="~/assets/images/logo-light.png" alt="" height="17">
            </span>
        </a>
        <button type="button" class="btn btn-sm p-0 fs-20 header-item float-end btn-vertical-sm-hover" id="vertical-hover">
            <i class="ri-record-circle-line"></i>
        </button>
    </div>

    <div id="scrollbar">
        <div class="container-fluid">

            <div id="two-column-menu">
            </div>
            <ul class="navbar-nav" id="navbar-nav">
                <li class="menu-title"><span data-key="t-menu">Menu</span></li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "Home", new { Area = "" })">
                        <i class="ri-home-2-fill"></i> <span data-key="t-home">Home</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "ItemTypes", new { Area = "" })">
                        <i class="ri-box-1-fill"></i> <span data-key="t-item-type">Item Types</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "Items", new { Area = "" })">
                        <i class="ri-archive-2-fill"></i> <span data-key="t-items">Items</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "ItemDepts", new { Area = "" })">
                        <i class="ri-store-2-fill"></i> <span data-key="t-item-departments">Item Departments</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "Warehouses", new { Area = "" })">
                        <i class="ri-building-4-fill"></i> <span data-key="t-warehouses">Warehouses</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "Units", new { Area = "" })">
                        <i class="ri-function-fill"></i> <span data-key="t-units">Units</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "Prs", new { Area = "" })">
                        <i class="ri-file-list-3-fill"></i> <span data-key="t-prs">Purchase Requisitions</span>
                    </a>
                </li>
                <li class="nav-item">
                    <a class="nav-link menu-link" href="@Url.Action("Index", "Reports", new { Area = "" })">
                        <i class="ri-file-chart-fill"></i> <span data-key="t-reports">Reports</span>
                    </a>
                </li>
                @if(User.IsInRole("Admin"))
                {
                    <li class="menu-title"><span data-key="t-admin">Admin</span></li>
                    @if (User.HasClaim("permission", PermissionConstants.Users.Index))
                    {
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="@Url.Action("Index", "Users", new { Area = "Admin" })">
                                <i class="ri-user-fill"></i> <span data-key="t-users">Users</span>
                            </a>
                        </li>
                    }
                    @if(User.HasClaim("permission", PermissionConstants.Roles.Index))
                    {
                        <li class="nav-item">
                            <a class="nav-link menu-link" href="@Url.Action("Index", "Roles", new { Area = "Admin" })">
                                <i class="ri-shield-fill"></i> <span data-key="t-permissions">Roles</span>
                            </a>
                        </li>
                    }
                }
            </ul>
        </div>
        <!-- Sidebar -->
    </div>
    <div class="sidebar-background"></div>
</div>
<!-- Left Sidebar End -->
<!-- Vertical Overlay-->
<div class="vertical-overlay"></div>