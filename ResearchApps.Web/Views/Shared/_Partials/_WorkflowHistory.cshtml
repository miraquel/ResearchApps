@model IEnumerable<ResearchApps.Service.Vm.WfTransHistoryVm>

<div class="table-responsive">
    <table id="workflow-history-table" class="table table-bordered table-sm table-hover">
        <thead class="table-light">
            <tr>
                <th style="width: 10%">Index</th>
                <th style="width: 20%">User</th>
                <th style="width: 25%">Status</th>
                <th style="width: 25%">Action Date</th>
                <th style="width: 20%">Notes</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Any())
            {
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-center">@item.Index</td>
                        <td>@item.UserId</td>
                        <td>@item.WfStatusActionName</td>
                        <td>@item.ActionDateStr</td>
                        <td>@item.Notes</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="5" class="text-center text-muted">
                        <i class="ri-information-line"></i> No workflow history available
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
