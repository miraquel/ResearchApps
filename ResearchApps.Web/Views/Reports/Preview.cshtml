@model ResearchApps.Service.Vm.ReportGenerateVm

@{
    ViewBag.Title = "Report Preview";
    ViewBag.pTitle = "Report Preview";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="card">
            <div class="card-header d-flex align-items-center">
                <div class="flex-grow-1">
                    <h5 class="card-title mb-0">Report Preview</h5>
                    <p class="text-muted mb-0">@Model.ReportName</p>
                </div>
                <div class="flex-shrink-0">
                    <a asp-action="Download" asp-route-id="@Model.ReportId" asp-route-format="pdf" class="btn btn-primary btn-sm">
                        <i class="ri-download-line align-bottom me-1"></i> Download PDF
                    </a>
                    <a asp-action="Generate" asp-route-id="@Model.ReportId" class="btn btn-warning btn-sm">
                        <i class="ri-refresh-line align-bottom me-1"></i> Regenerate
                    </a>
                    <a asp-action="Index" class="btn btn-secondary btn-sm">
                        <i class="ri-arrow-left-line align-bottom me-1"></i> Back to List
                    </a>
                </div>
            </div>
            <div class="card-body">
                @if (TempData["InfoMessage"] != null)
                {
                    <div class="alert alert-info alert-dismissible fade show" role="alert">
                        <i class="ri-information-line me-2"></i>
                        @TempData["InfoMessage"]
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                }

                @if (Model != null)
                {
                    <div class="row mb-4">
                        <div class="col-md-12">
                            <div class="alert @(Model.ReportType == 1 ? "alert-primary" : "alert-info")" role="alert">
                                <h6 class="alert-heading">
                                    @if (Model.ReportType == 1)
                                    {
                                        <i class="ri-file-pdf-line me-1"></i>
                                        <span>Fully Generated Report</span>
                                    }
                                    else
                                    {
                                        <i class="ri-printer-line me-1"></i>
                                        <span>Partially Generated Report (Continuous Paper)</span>
                                    }
                                </h6>
                                <hr>
                                <p class="mb-0">
                                    @if (Model.ReportType == 1)
                                    {
                                        <span>This report has been generated with the complete layout including headers, data tables, and footers.</span>
                                    }
                                    else
                                    {
                                        <span>This report contains only the variable data fields for printing on pre-printed continuous paper forms.</span>
                                    }
                                </p>
                            </div>
                        </div>
                    </div>

                    <!-- Parameter Summary -->
                    @if (Model.ParameterValues.Count > 0)
                    {
                        <div class="card mb-4">
                            <div class="card-header">
                                <h6 class="mb-0"><i class="ri-settings-3-line me-1"></i> Parameters Used</h6>
                            </div>
                            <div class="card-body">
                                <div class="row">
                                    @foreach (var param in Model.Parameters.OrderBy(p => p.DisplayOrder))
                                    {
                                        var value = Model.ParameterValues.GetValueOrDefault(param.ParameterName, "-");
                                        <div class="col-md-4 col-lg-3 mb-2">
                                            <strong>@param.DisplayLabel:</strong>
                                            <span class="text-muted">@(string.IsNullOrEmpty(value) ? "-" : value)</span>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>
                    }

                    <!-- Report Preview Area -->
                    <div class="card">
                        <div class="card-header bg-light">
                            <h6 class="mb-0"><i class="ri-eye-line me-1"></i> Report Output</h6>
                        </div>
                        <div class="card-body p-0">
                            <div class="report-preview-container" style="min-height: 500px; background-color: #f8f9fa; display: flex; align-items: center; justify-content: center;">
                                <div class="text-center text-muted py-5">
                                    <i class="ri-file-pdf-2-line" style="font-size: 5rem; color: #dc3545;"></i>
                                    <h5 class="mt-3">Report Generated Successfully</h5>
                                    <p>Click "Download PDF" to save the report to your device.</p>
                                    <div class="mt-4">
                                        <a asp-action="Download" asp-route-id="@Model.ReportId" asp-route-format="pdf" class="btn btn-primary">
                                            <i class="ri-download-line align-bottom me-1"></i> Download PDF
                                        </a>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="ri-error-warning-line fs-1 text-warning"></i>
                        <h5 class="mt-3">No Report Data</h5>
                        <p class="text-muted">Please go back and generate the report again.</p>
                        <a asp-action="Index" class="btn btn-primary">Back to Reports</a>
                    </div>
                }
            </div>
        </div>
    </div>
</div>

