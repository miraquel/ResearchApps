@model ResearchApps.Service.Vm.ReportVm

@{
    ViewBag.Title = "Delete Report";
    ViewBag.pTitle = "Delete Report";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-12">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white d-flex align-items-center">
                <i class="ri-error-warning-line fs-4 me-2"></i>
                <h5 class="card-title mb-0 flex-grow-1 text-white">Confirm Delete</h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="ri-alert-line me-2"></i>
                    <strong>Warning!</strong> You are about to delete this report. This action cannot be undone.
                    All associated parameters will also be deleted.
                </div>

                <h5 class="mb-3">Report Details</h5>
                <dl class="row">
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ReportId)</dt>
                    <dd class="col-sm-9">@Model.ReportId</dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.ReportName)</dt>
                    <dd class="col-sm-9"><strong>@Model.ReportName</strong></dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.Description)</dt>
                    <dd class="col-sm-9">@(Model.Description ?? "-")</dd>
                    
                    <dt class="col-sm-3">Report Type</dt>
                    <dd class="col-sm-9">@Model.ReportTypeName</dd>
                    
                    <dt class="col-sm-3">Parameters</dt>
                    <dd class="col-sm-9">
                        @if (Model.Parameters.Count > 0)
                        {
                            <span class="badge bg-info">@Model.Parameters.Count parameter(s)</span>
                        }
                        else
                        {
                            <span class="text-muted">No parameters</span>
                        }
                    </dd>
                    
                    <dt class="col-sm-3">@Html.DisplayNameFor(m => m.CreatedDate)</dt>
                    <dd class="col-sm-9">@Model.CreatedDate.ToString("dd MMM yyyy HH:mm") by @Model.CreatedBy</dd>
                </dl>

                <hr>

                <form asp-action="Delete" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="ReportId" />
                    
                    <div class="d-flex justify-content-end gap-2">
                        <a asp-action="Index" class="btn btn-secondary">
                            <i class="ri-arrow-left-line align-bottom me-1"></i> Cancel
                        </a>
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you absolutely sure you want to delete this report? This action cannot be undone.');">
                            <i class="ri-delete-bin-line align-bottom me-1"></i> Delete Report
                        </button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

