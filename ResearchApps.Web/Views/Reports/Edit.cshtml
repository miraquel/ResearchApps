@section scripts {
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/libs/select2/js/select2.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
    <script>
        $(document).ready(function() {
            let parameterIndex = @Model.Parameters.Count;
            let coordinateIndex = @Model.FieldCoordinates.Count;
            
            // Initialize report type sections
            updateReportTypeSections();
            
            // Handle report type change
            $('#reportTypeSelect').on('change', function() {
                updateReportTypeSections();
            });
            
            function updateReportTypeSections() {
                const value = $('#reportTypeSelect').val();
                if (value === '2') {
                    // Partially Generated - show coordinates, hide template upload
                    $('#templateUploadSection').hide();
                    $('#fieldCoordinatesSection').show();
                    $('#reportTypeHelp').text('Partially Generated: Prints only main info on pre-printed continuous paper.');
                } else {
                    // Fully Generated - show template upload, hide coordinates
                    $('#templateUploadSection').show();
                    $('#fieldCoordinatesSection').hide();
                    $('#reportTypeHelp').text('Fully Generated: Creates complete PDF with header, table, and footer.');
                }
            }
            
            // Add parameter
            $('#addParameterBtn').on('click', function() {
                const template = $('#parameterTemplate').html();
                const html = template
                    .replace(/__INDEX__/g, parameterIndex)
                    .replace(/__NUMBER__/g, parameterIndex + 1);
                
                $('#parametersContainer').append(html);
                $('#noParametersMessage').hide();
                parameterIndex++;
                updateParameterNumbers();
            });
            
            // Remove parameter
            $(document).on('click', '.remove-param-btn', function() {
                $(this).closest('.parameter-card').remove();
                updateParameterNumbers();
                reindexParameters();
                if ($('.parameter-card').length === 0) {
                    $('#noParametersMessage').show();
                }
            });
            
            // Update parameter name display
            $(document).on('input', '.param-name-input', function() {
                const card = $(this).closest('.parameter-card');
                const name = $(this).val();
                card.find('.param-name-display').text(name ? `- ${name}` : '');
            });
            
            // Add coordinate
            $('#addCoordinateBtn').on('click', function() {
                const template = $('#coordinateTemplate').html();
                const html = template
                    .replace(/__COORD_INDEX__/g, coordinateIndex)
                    .replace(/__COORD_NUMBER__/g, coordinateIndex + 1);
                
                $('#coordinatesContainer').append(html);
                $('#noCoordinatesMessage').hide();
                coordinateIndex++;
                updateCoordinateNumbers();
            });
            
            // Remove coordinate
            $(document).on('click', '.remove-coord-btn', function() {
                $(this).closest('.coordinate-card').remove();
                updateCoordinateNumbers();
                reindexCoordinates();
                if ($('.coordinate-card').length === 0) {
                    $('#noCoordinatesMessage').show();
                }
            });
            
            // Update coordinate name display
            $(document).on('input', '.coord-name-input', function() {
                const card = $(this).closest('.coordinate-card');
                const name = $(this).val();
                card.find('.coord-name-display').text(name ? `- ${name}` : '');
            });
            
            // Handle repeating field toggle
            $(document).on('change', '.is-repeating-check', function() {
                const card = $(this).closest('.coordinate-card');
                if ($(this).is(':checked')) {
                    card.find('.row-increment-field').show();
                } else {
                    card.find('.row-increment-field').hide();
                }
            });
            
            function updateParameterNumbers() {
                $('.parameter-card').each(function(index) {
                    $(this).find('.param-number').text(index + 1);
                });
            }
            
            function reindexParameters() {
                $('.parameter-card').each(function(index) {
                    const card = $(this);
                    card.attr('data-index', index);
                    card.find('[name^="Parameters["]').each(function() {
                        const name = $(this).attr('name');
                        const newName = name.replace(/Parameters\[\d+\]/, `Parameters[${index}]`);
                        $(this).attr('name', newName);
                    });
                });
                parameterIndex = $('.parameter-card').length;
            }
            
            function updateCoordinateNumbers() {
                $('.coordinate-card').each(function(index) {
                    $(this).find('.coord-number').text(index + 1);
                });
            }
            
            function reindexCoordinates() {
                $('.coordinate-card').each(function(index) {
                    const card = $(this);
                    card.attr('data-coord-index', index);
                    card.find('[name^="FieldCoordinates["]').each(function() {
                        const name = $(this).attr('name');
                        const newName = name.replace(/FieldCoordinates\[\d+\]/, `FieldCoordinates[${index}]`);
                        $(this).attr('name', newName);
                    });
                });
                coordinateIndex = $('.coordinate-card').length;
            }
            
            // Form submission with confirmation
            $('#editReportForm').on('submit', function(e) {
                const confirmMessage = $('#submitBtn').data('confirm');
                if (confirmMessage && !confirm(confirmMessage)) {
                    e.preventDefault();
                    return false;
                }
                
                const reportName = $('[name="ReportName"]').val().trim();
                if (!reportName) {
                    e.preventDefault();
                    alert('Report name is required.');
                    return false;
                }
                
                const reportType = $('#reportTypeSelect').val();
                // Validate partially generated requires at least one coordinate
                if (reportType === '2' && $('.coordinate-card').length === 0) {
                    if (!confirm('No field coordinates defined. Continue anyway?')) {
                        e.preventDefault();
                        return false;
                    }
                }
            });
        });
    </script>
}

