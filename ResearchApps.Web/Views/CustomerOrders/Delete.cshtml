@model ResearchApps.Service.Vm.CustomerOrderHeaderVm

@{
    ViewBag.Title = "Delete Customer Order";
    ViewBag.pTitle = "Delete Customer Order";
    Layout = "_Layout";
}

<div class="row">
    <div class="col-lg-12">
        <div class="card border-danger">
            <div class="card-header bg-danger text-white">
                <h5 class="card-title mb-0">
                    <i class="ri-alert-line"></i> Confirm Delete
                </h5>
            </div>
            <div class="card-body">
                <div class="alert alert-warning" role="alert">
                    <i class="ri-error-warning-line me-2"></i>
                    Are you sure you want to delete this customer order? This action cannot be undone and will also delete all order lines.
                </div>
                
                <dl class="row">
                    <dt class="col-sm-3">Order No</dt>
                    <dd class="col-sm-9">@Model.CoId</dd>
                    
                    <dt class="col-sm-3">Order Date</dt>
                    <dd class="col-sm-9">@Model.CoDate.ToString("dd MMM yyyy")</dd>
                    
                    <dt class="col-sm-3">Customer</dt>
                    <dd class="col-sm-9">@Model.CustomerName</dd>
                    
                    <dt class="col-sm-3">Total</dt>
                    <dd class="col-sm-9">@Model.Total.ToString("N0")</dd>
                    
                    <dt class="col-sm-3">Status</dt>
                    <dd class="col-sm-9">@Model.CoStatusName</dd>
                </dl>
                
                <form asp-action="DeleteConfirmed" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" asp-for="RecId" />
                    <div class="form-group mt-4">
                        <button type="submit" class="btn btn-danger">
                            <i class="ri-delete-bin-line"></i> Delete
                        </button>
                        <a asp-action="Details" asp-route-id="@Model.RecId" class="btn btn-secondary">Cancel</a>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
