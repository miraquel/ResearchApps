@using ResearchApps.Common.Constants
@model ResearchApps.Service.Vm.Common.PagedListVm<ResearchApps.Service.Vm.DeliveryOrderHeaderVm>

@if (Model.Items.Any())
{
    foreach (var item in Model.Items)
    {
        <tr>
            <td class="text-center fw-semibold">@item.DoId</td>
            <td class="text-center">@item.DoDate.ToString("dd MMM yyyy")</td>
            <td>@item.CustomerName</td>
            <td class="text-center">@item.CoId</td>
            <td class="text-center">@(string.IsNullOrEmpty(item.RefId) ? "-" : item.RefId)</td>
            <td>@item.Descr</td>
            <td class="text-center">
                @Html.Raw(item.DoStatusName)
            </td>
            <td class="text-center">
                <div class="dropdown d-inline-block">
                    <button class="btn btn-soft-secondary btn-sm dropdown" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                        <i class="ri-more-fill align-middle"></i>
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end">
                        <li>
                            <a href="/DeliveryOrders/Details/@item.RecId" class="dropdown-item">
                                <i class="ri-eye-fill align-bottom me-2 text-muted"></i> View
                            </a>
                        </li>
                        @if (item.CreatedBy == User.Identity?.Name)
                        {
                            <li>
                                <a href="/DeliveryOrders/Edit/@item.RecId" class="dropdown-item">
                                    <i class="ri-pencil-fill align-bottom me-2 text-muted"></i> Edit
                                </a>
                            </li>
                            <li>
                                <a href="/DeliveryOrders/Delete/@item.RecId" class="dropdown-item">
                                    <i class="ri-delete-bin-fill align-bottom me-2 text-muted"></i> Delete
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </td>
        </tr>
    }
}
else
{
    <tr>
        <td colspan="8" class="text-center text-muted py-4">
            <i class="ri-inbox-line fs-2"></i>
            <p class="mb-0 mt-2">No delivery orders found</p>
        </td>
    </tr>
}
