@using ResearchApps.Common.Constants
@model ResearchApps.Service.Vm.DeliveryOrderVm

@{
    ViewBag.Title = "Delivery Order Details";
    ViewBag.pTitle = $"Delivery Order {Model.Header.DoId}";
    Layout = "_Layout";
}

@section styles {
    <link href="/assets/css/datatables.min.css" rel="stylesheet" type="text/css" />
}

@Html.AntiForgeryToken()

<div class="card">
    <div class="card-header">
        <div class="row">
            <div class="col d-flex justify-content-between align-items-center">
                <ul class="nav nav-tabs-custom rounded card-header-tabs border-bottom-0" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-bs-toggle="tab" href="#overview">Overview</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#lines">Lines</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#log">Log</a>
                    </li>
                </ul>
                <div class="position-absolute top-0 end-0">
                    @if(User.HasClaim("permission", PermissionConstants.DeliveryOrders.Edit))
                    {
                        <a href="@Url.Action("Edit", "DeliveryOrders", new { id = Model.Header.RecId })" class="btn btn-sm btn-success me-2">
                            <i class="ri-edit-line"></i> Edit
                        </a>
                    }
                    @if (User.HasClaim("permission", PermissionConstants.DeliveryOrders.Delete))
                    {
                        <a href="@Url.Action("Delete", "DeliveryOrders", new { id = Model.Header.RecId })" class="btn btn-sm btn-danger">
                            <i class="ri-delete-bin-line"></i> Delete
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="overview" role="tabpanel">
                <div class="row mb-4">
                    <div class="col-3"><strong>DO No</strong></div>
                    <div class="col-9">@Model.Header.DoId</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>DO Date</strong></div>
                    <div class="col-9">@Model.Header.DoDate.ToString("dd MMM yyyy")</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Customer</strong></div>
                    <div class="col-9">
                        <a href="/Customers/Details/@Model.Header.CustomerId">@Model.Header.CustomerName</a>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Description</strong></div>
                    <div class="col-9">@Model.Header.Descr</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Reference ID</strong></div>
                    <div class="col-9">@Model.Header.RefId</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Status</strong></div>
                    <div class="col-9">
                        @{
                            var badgeClass = Model.Header.DoStatusId switch
                            {
                                0 => "bg-secondary",
                                1 => "bg-info",
                                2 => "bg-success",
                                3 => "bg-danger",
                                _ => "bg-secondary"
                            };
                        }
                        <span class="badge @badgeClass">@Model.Header.DoStatusName</span>
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Notes</strong></div>
                    <div class="col-9">@Model.Header.Notes</div>
                </div>
            </div>
            
            <div class="tab-pane" id="lines" role="tabpanel">
                <table id="lines-table" class="table table-bordered dt-responsive nowrap table-striped align-middle" style="width: 100%;">
                    <thead>
                    <tr>
                        <th>Line</th>
                        <th>CO No</th>
                        <th>CO Line</th>
                        <th>Item</th>
                        <th>Qty</th>
                        <th>Unit</th>
                        <th>Notes</th>
                    </tr>
                    </thead>
                    <tbody>
                    @foreach (var line in Model.Lines)
                    {
                        <tr>
                            <td class="text-center">@line.DoLineId</td>
                            <td>
                                <a href="/CustomerOrders/Details?coId=@line.CoId">@line.CoId</a>
                            </td>
                            <td class="text-center">@line.CoLineId</td>
                            <td>@line.ItemName</td>
                            <td class="text-end">@line.Qty.ToString("N2")</td>
                            <td class="text-center">@line.UnitName</td>
                            <td>@line.Notes</td>
                        </tr>
                    }
                    </tbody>
                </table>
            </div>
            
            <div class="tab-pane" id="log" role="tabpanel">
                <div class="row mb-4">
                    <div class="col-3"><strong>Created Date</strong></div>
                    <div class="col-9">@Model.Header.CreatedDate.ToString("dd MMM yyyy HH:mm:ss")</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Created By</strong></div>
                    <div class="col-9">@Model.Header.CreatedBy</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Modified Date</strong></div>
                    <div class="col-9">@Model.Header.ModifiedDate.ToString("dd MMM yyyy HH:mm:ss")</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>Modified By</strong></div>
                    <div class="col-9">@Model.Header.ModifiedBy</div>
                </div>
            </div>
        </div>
    </div>
</div>

@section scripts {
    <script src="/assets/libs/jquery/jquery.min.js"></script>
    <script src="/assets/js/datatables.min.js"></script>
}
