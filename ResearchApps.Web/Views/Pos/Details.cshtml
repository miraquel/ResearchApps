@model ResearchApps.Service.Vm.PoVm

@{
    ViewBag.Title = $"Purchase Order - {Model.Header.PoId}";
    ViewBag.pTitle = $"Purchase Order - {Model.Header.PoId}";
    Layout = "_Layout";
    var isCreator = Model.Header.CreatedBy == User.Identity?.Name;
    var isCurrentApprover = Model.Header.CurrentApprover == User.Identity?.Name;
    var showWorkflow = Model.Header.PoStatusId is 4 or 5 or 6; // Pending, Approved, Rejected
}

<div x-data="{...poDetails('@Model.Header.PoId', @Model.Header.RecId), workflow: createWorkflowComponent({recId: @Model.Header.RecId, refId: '@Model.Header.PoId', baseUrl: '/Pos'}), showWorkflow: @(showWorkflow ? "true" : "false")}" x-init="init()">
    @Html.AntiForgeryToken()
    
    <div class="row">
        <div class="col-12">
            <div class="card">
                <div class="card-header">
                    <div class="d-flex justify-content-between align-items-center">
                        <ul class="nav nav-tabs-custom border-0 mb-0" role="tablist">
                            <li class="nav-item">
                                <a class="nav-link active" data-bs-toggle="tab" href="#overview" role="tab">
                                    <i class="ri-file-info-line me-1"></i>Overview
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#lines" role="tab">
                                    <i class="ri-list-check-2 me-1"></i>Lines
                                </a>
                            </li>
                            <li class="nav-item" x-show="showWorkflow">
                                <a class="nav-link" data-bs-toggle="tab" href="#workflow" role="tab">
                                    <i class="ri-workflow-line me-1"></i>Workflow
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" data-bs-toggle="tab" href="#log" role="tab">
                                    <i class="ri-history-line me-1"></i>Log
                                </a>
                            </li>
                        </ul>
                        <div class="d-flex gap-2">
                            @await Html.PartialAsync("_Partials/_WorkflowButtons", Model.Header)
                            
                            @if (Model.Header.PoStatusId == 0 && isCreator)
                            {
                                <a href="/Pos/Edit/@Model.Header.RecId" class="btn btn-sm btn-success">
                                    <i class="ri-edit-line me-1"></i>Edit
                                </a>
                                <a href="/Pos/Delete/@Model.Header.RecId" class="btn btn-sm btn-danger">
                                    <i class="ri-delete-bin-line me-1"></i>Delete
                                </a>
                            }
                            <a href="/Pos" class="btn btn-sm btn-secondary">
                                <i class="ri-arrow-left-line me-1"></i>Back to List
                            </a>
                        </div>
                    </div>
                </div>
                <div class="card-body">
                    <div class="tab-content">
                        <!-- Overview Tab -->
                        <div class="tab-pane active" id="overview" role="tabpanel">
                            <div class="row">
                                <div class="col-md-6">
                                    <table class="table table-borderless mb-0">
                                        <tbody>
                                            <tr>
                                                <th width="40%">PO ID:</th>
                                                <td><strong>@Model.Header.PoId</strong></td>
                                            </tr>
                                            <tr>
                                                <th>PO Date:</th>
                                                <td>@Model.Header.PoDate.ToString("dd MMM yyyy")</td>
                                            </tr>
                                            <tr>
                                                <th>Supplier:</th>
                                                <td>@Model.Header.SupplierName</td>
                                            </tr>
                                            <tr>
                                                <th>Total Amount:</th>
                                                <td><strong>@((Model.Header.Total).ToString("N2"))</strong></td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                                <div class="col-md-6">
                                    <table class="table table-borderless mb-0">
                                        <tbody>
                                            <tr>
                                                <th width="40%">Status:</th>
                                                <td>
                                                    <span class="badge @(Model.Header.PoStatusId switch {
                                                        0 => "bg-secondary",
                                                        1 => "bg-success",
                                                        2 => "bg-warning",
                                                        3 => "bg-dark",
                                                        4 => "bg-info",
                                                        5 => "bg-success",
                                                        6 => "bg-danger",
                                                        _ => "bg-secondary"
                                                    })">
                                                        @Model.Header.PoStatusName
                                                    </span>
                                                </td>
                                            </tr>
                                            <tr>
                                                <th>Current Approver:</th>
                                                <td>@(Model.Header.CurrentApprover ?? "-")</td>
                                            </tr>
                                            <tr>
                                                <th>Created By:</th>
                                                <td>@Model.Header.CreatedBy</td>
                                            </tr>
                                            <tr>
                                                <th>Created Date:</th>
                                                <td>@Model.Header.CreatedDate.ToString("dd MMM yyyy HH:mm")</td>
                                            </tr>
                                            <tr>
                                                <th>Modified By:</th>
                                                <td>@Model.Header.ModifiedBy</td>
                                            </tr>
                                            <tr>
                                                <th>Modified Date:</th>
                                                <td>@Model.Header.ModifiedDate.ToString("dd MMM yyyy HH:mm")</td>
                                            </tr>
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                            @if (!string.IsNullOrEmpty(Model.Header.Notes))
                            {
                                <hr />
                                <div class="row">
                                    <div class="col-12">
                                        <h6>Notes:</h6>
                                        <p class="text-muted">@Model.Header.Notes</p>
                                    </div>
                                </div>
                            }
                        </div>

                        <!-- Lines Tab -->
                        <div class="tab-pane" id="lines" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-hover align-middle mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th width="5%">#</th>
                                            <th>Item</th>
                                            <th width="10%" class="text-end">Qty</th>
                                            <th width="10%">Unit</th>
                                            <th width="15%" class="text-end">Price</th>
                                            <th width="15%" class="text-end">Amount</th>
                                            <th width="20%">Notes</th>
                                            <th width="10%" class="text-center">Actions</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @if (Model.Lines != null && Model.Lines.Any())
                                        {
                                            @for (int i = 0; i < Model.Lines.Count; i++)
                                            {
                                                var line = Model.Lines[i];
                                                <tr>
                                                    <td>@(i + 1)</td>
                                                    <td>
                                                        <a href="#" 
                                                           @@click.prevent="showLineDetail(@i)" 
                                                           class="text-decoration-none">
                                                            @line.ItemName
                                                        </a>
                                                    </td>
                                                    <td class="text-end">@line.Qty.ToString("N2")</td>
                                                    <td>@line.UnitName</td>
                                                    <td class="text-end">@line.Price.ToString("N2")</td>
                                                    <td class="text-end">@line.Amount.ToString("N2")</td>
                                                    <td><span class="text-muted">@(line.Notes ?? "-")</span></td>
                                                    <td class="text-center">
                                                        <button type="button" 
                                                                class="btn btn-sm btn-soft-primary" 
                                                                @@click="showLineDetail(@i)"
                                                                title="View Details">
                                                            <i class="ri-eye-line"></i>
                                                        </button>
                                                    </td>
                                                </tr>
                                            }
                                        }
                                        else
                                        {
                                            <tr>
                                                <td colspan="8" class="text-center py-4 text-muted">
                                                    <i class="ri-inbox-line" style="font-size: 3rem;"></i>
                                                    <p class="mt-2">No line items found.</p>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                    @if (Model.Lines != null && Model.Lines.Any())
                                    {
                                        <tfoot class="table-light">
                                            <tr>
                                                <th colspan="5" class="text-end">Total:</th>
                                                <th class="text-end">@Model.Lines.Sum(l => l.Amount).ToString("N2")</th>
                                                <th colspan="2"></th>
                                            </tr>
                                        </tfoot>
                                    }
                                </table>
                            </div>
                        </div>

                        <!-- Workflow Tab -->
                        <div class="tab-pane" id="workflow" role="tabpanel" x-show="showWorkflow">
                            <div hx-get="@Url.Action("WorkflowHistory", "Pos", new { refId = Model.Header.PoId, wfFormId = 3 })"
                                 hx-trigger="load"
                                 hx-swap="innerHTML">
                                <div class="text-center py-4">
                                    <div class="spinner-border text-primary" role="status">
                                        <span class="visually-hidden">Loading...</span>
                                    </div>
                                    <p class="mt-2 text-muted">Loading workflow history...</p>
                                </div>
                            </div>
                        </div>

                        <!-- Log Tab -->
                        <div class="tab-pane" id="log" role="tabpanel">
                            <div class="table-responsive">
                                <table class="table table-sm table-borderless">
                                    <tbody>
                                        <tr>
                                            <th width="20%">Created By:</th>
                                            <td>@Model.Header.CreatedBy</td>
                                        </tr>
                                        <tr>
                                            <th>Created Date:</th>
                                            <td>@Model.Header.CreatedDate.ToString("dd MMM yyyy HH:mm:ss")</td>
                                        </tr>
                                        <tr>
                                            <th>Last Modified By:</th>
                                            <td>@Model.Header.ModifiedBy</td>
                                        </tr>
                                        <tr>
                                            <th>Last Modified Date:</th>
                                            <td>@Model.Header.ModifiedDate.ToString("dd MMM yyyy HH:mm:ss")</td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    @await Html.PartialAsync("_Partials/_WorkflowModal", Model.Header.PoId)
    @await Html.PartialAsync("_Partials/_PoLineDetailModal")
</div>

@section scripts {
    <script src="~/js/components/workflow-component.js"></script>
    <script src="~/js/pos/po-details.js"></script>
    <script>
        // Pass lines data to Alpine component
        window.poLinesData = @Html.Raw(System.Text.Json.JsonSerializer.Serialize(Model.Lines ?? new List<ResearchApps.Service.Vm.PoLineVm>()));
    </script>
}
