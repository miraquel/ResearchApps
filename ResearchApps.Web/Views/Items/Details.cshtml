@using ResearchApps.Common.Constants
@model ResearchApps.Service.Vm.ItemVm

@{
    ViewBag.Title = "Item Details";
    Layout = "_Layout";
}

<div class="card mt-3">
    <div class="card-header">
        <div class="row align-items-center mb-4">
            <div class="col">
                <h4 class="card-title mb-0">Item Details</h4>
            </div>
            <div class="col-auto">
                @if(User.HasClaim("permission", PermissionConstants.Items.Edit))
                {
                    <a href="@Url.Action("Edit", "Items", new { id = Model.ItemId })" class="btn btn-sm btn-success me-2">
                        <i class="ri-edit-line"></i> Edit
                    </a>
                }
                @if (User.HasClaim("permission", PermissionConstants.Items.Delete))
                {
                    <a href="@Url.Action("Delete", "Items", new { id = Model.ItemId })" class="btn btn-sm btn-danger">
                        <i class="ri-delete-bin-line"></i> Delete
                    </a>
                }
            </div>
        </div>
        <div class="row">
            <div class="col">
                <ul class="nav nav-tabs-custom rounded card-header-tabs border-bottom-0" role="tablist">
                    <li class="nav-item" role="presentation">
                        <a class="nav-link active" data-bs-toggle="tab" href="#overview">Overview</a>
                    </li>
                    <li class="nav-item" role="presentation">
                        <a class="nav-link" data-bs-toggle="tab" href="#log">Log</a>
                    </li>
                </ul>
            </div>
        </div>
    </div>
    <div class="card-body">
        <div class="tab-content">
            <div class="tab-pane active" id="overview" role="tabpanel">
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ItemId)</strong></div>
                    <div class="col-9">@Model.ItemId</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ItemName)</strong></div>
                    <div class="col-9">@Model.ItemName</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ItemTypeName)</strong></div>
                    <div class="col-9">@Model.ItemTypeName</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ItemDeptName)</strong></div>
                    <div class="col-9">@Model.ItemDeptName</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.BufferStock)</strong></div>
                    <div class="col-9">@Model.BufferStock</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.UnitName)</strong></div>
                    <div class="col-9">@Model.UnitName</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.PurchasePrice)</strong></div>
                    <div class="col-9">@Model.PurchasePrice</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.SalesPrice)</strong></div>
                    <div class="col-9">@Model.SalesPrice</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.CostPrice)</strong></div>
                    <div class="col-9">@Model.CostPrice</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.Image)</strong></div>
                    <div class="col-9">
                        @if (!string.IsNullOrEmpty(Model.Image)) {
                            <img src="@Model.Image" alt="Image" style="max-width:80px;max-height:80px;" />
                        }
                    </div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.Notes)</strong></div>
                    <div class="col-9">@Model.Notes</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.StatusName)</strong></div>
                    <div class="col-9">@Model.StatusName</div>
                </div>
            </div>
            <div class="tab-pane" id="log" role="tabpanel">
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.CreatedDate)</strong></div>
                    <div class="col-9">@Model.CreatedDate</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.CreatedBy)</strong></div>
                    <div class="col-9">@Model.CreatedBy</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ModifiedDate)</strong></div>
                    <div class="col-9">@Model.ModifiedDate</div>
                </div>
                <div class="row mb-4">
                    <div class="col-3"><strong>@Html.DisplayNameFor(m => m.ModifiedBy)</strong></div>
                    <div class="col-9">@Model.ModifiedBy</div>
                </div>
            </div>
        </div>
    </div>
</div>
